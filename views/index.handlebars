<div class="container">
    <div class="jumbotron">
        <img src="">
        <h1> Eat-Da-Burger! </h1>
    </div>

    {{!-- Burger list before being eaten --}}
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            
                <div class="list-group">
                    <ul class="list-group-item d-flex justify-content-between align-items-center">
                        {{#each burgers}} {{#unless this.devoured}}
                        <li class="list-group-item">
                           <h2 class="burger-list"> {{this.id}} {{this.burger_name}}</h2>

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button class="btn-primary" type="submit">Devour It!</button>
                            </form>

                        </li>
                        {{/unless}} {{/each}}
                    </ul>
                </div>
            
        </div>


        {{!-- burger list after being eaten --}}
        <div class="row">
            <h2>Burgers that Have Been Devoured!</h2>
            <div class="col-md-4 col-md-offset-2">
                <div class="panel panel-default">

                    {{#each burgers}} {{#if this.devoured}}
                    <li class="list-group-item">
                        <p class="lead eaten-burger">{{this.burger_name}} </p>
                    </li>
                    {{/if}} {{/each}}

                </div>
            </div>
        </div>

        <div class="row">
            <div class="center col-sm-12" <p class="lead"> Enter the name of the burger you want to eat & Click the Submit button. </p>

                {{!-- section to add burgers --}}
                <form class="create-update-form" action="/" method="POST">

                    <div class="form-group">
                        <textarea class="form-control" type="text" id="ca" name="burger_name" rows="3"> </textarea>
                    </div>

                    <button class="btn btn-primary btn-lg" type="submit">Add Burger!</button>
                </form>
            </div>
        </div>